		<script>
		document.write("<tr>");
		for (let i=0;i<10;i++) {
			document.write(`<td>${i+1}</td>`);			
		}
		document.write("</tr>");
		
		
		let i=0;
		document.write("<tr>");
		while (i<10) {
			document.write(`<td>${i+1}</td>`);
			i++;
		}
		document.write("</tr>");
		</script>
		
	</table>
	<hr>
	
	<script type="text/javascript">
		// 무한 루프 
		// for문 또는 while문에서 조건식에 true 지정 시 무한 반복을 수행하는 무한 루프 구현 가능
		// => 단, 반복을 종료하려면 반복문 내에서 if문 등을 통해 등적 조건 만족 시 
		// break 문을 통해 반복문 종료 가능 		
		
		let count = 1;
		
		while (true) {
			
			document.write("count = " +count + "<br>");
			
			if (count >=5) {
				break;
			}
			 count++;
			
		}
		
		document.write("count = " +count +"<br>");
	
	</script>





