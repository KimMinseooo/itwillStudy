<script type="text/javascript">

/*
 	1. 단일 if문 
 	- if문에 주어진 조건을 판별하여 true 일 떄 지정된 블럭 내의 문장들을 수행하는 if문
 	<기본 문법>
 	
 	문장1;
 	if(조건식) {
 		// 조건식 판별 결과가 true 일 때 실행할 문장들....
 		문장2;
 		
 	}
	문장3;
	
	조건식 true :문장1, 문장 2, 문장 3 
	조건식 false : 문장 1 ,문장 3 
*/

	let num = -10 ;
	console.log("num = " + num);
	
	if(num > 0) {
		console.log("num이 0보다 크다!");		
	}
	console.log("이 문장은 if문 판별 결과와 상관없이 출력된다!");

</script>


