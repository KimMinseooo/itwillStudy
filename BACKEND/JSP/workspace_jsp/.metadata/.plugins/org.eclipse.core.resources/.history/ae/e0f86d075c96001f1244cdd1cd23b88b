<script type="text/javascript">

	// 연습문제 
	// ============================
	// 1. 숫자 1개(num)을 변수에 저장 후 짝수 , 홀수 ,0 판별하여 출력
// 		=> 출력형식 : "XX : 짝수! ", "XX : 홀수! " , "XX :0"

	// 2. 숫자 1개(age)를 변수에 저장 if문으로 조건 판별
// 		1) 나이(age)가 "10대" 인지 판별 
// 			=> 출력형식 : "xxx세: 10대입니다!", "xxx세 : 10대가 아닙니다~!" 출력

	let num = 0; 
	let msg =num +" : ";
		if ( num == 0 ) { 
			msg +="0!";
		} else if (num % 2 == 1) { 
			msg +="홀수!";
		} else { 
			msg +="짝수!";
		}
		console.log(msg);
		
	let age = 19; 
	let msg1 = age+"세: ";

		if ((age/10) == 1 ) {
			debugger;
			msg1 +="10대입니다!";
		} else { 
			
			msg1 +="10대가 아닙니다!";
		}
		console.log(msg1);




</script>
